= form_for(@event) do |f| 
  - if @event.errors.any? 
    #error_explanation
      %h2
        = pluralize(@event.errors.count, "error") 
        prohibited this event from being saved:

  %ul
    - @event.errors.full_messages.each do |msg|
      %li= msg 

  .actions

    = f.label :headline 
    %br
    = f.text_field :headline 
    %br
    = f.label :text 
    %br
    = f.text_area :text 
    %br
    = f.submit
